  <h1>All Recipes</h1>
    <%= button_to "Create New Recipe", new_recipe_path, method: :get, class: "btn btn-default" %>
  <hr>

<div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-xs-6 col-md-3">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
            <p><strong>Total Calories:</strong> <%= recipe.calories %><br>
               <strong>Servings:</strong> <%= recipe.servings %><br>
               <strong>Calories per Serving:</strong> <%= recipe.calories_per_serving %></p>
              <hr>
              <%= button_to "Edit Recipe", edit_recipe_path(recipe), method: :get, class: "btn btn-default" %>
              <%= button_to "Delete Recipe", recipe_path(recipe), method: :delete, class: "btn btn-default"%>
          </div>
        </div>
      </div>
  <% end %>
</div>
